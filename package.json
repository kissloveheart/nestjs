{
  "name": "template",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "cross-env SUFFIX_ENV_NAME=local nest start --watch",
    "start:debug": "cross-env SUFFIX_ENV_NAME=local nest start --debug --watch",
    "start:dev": "cross-env SUFFIX_ENV_NAME=dev node dist/src/main",
    "start:prod": "node dist/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --force-exit --detectOpenHandles",
    "test:watch": "jest --watch --detectOpenHandles",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "docker:local": "docker compose -f docker-compose.local.yml up",
    "mongo:init": "docker compose -f docker-compose.mongo.yml up -d",
    "prepare": "test -d node_modules/husky && husky install || echo \"husky is not installed\"",
    "typeorm": "npx typeorm -d dist/src/config/typeorm.config.js",
    "gen:module": "ts-node tools/generate.ts",
    "migration:create": "cd src/migrations && npx typeorm migration:create",
    "migration:run": "sh script/migration.sh run",
    "migration:revert": "sh script/migration.sh revert",
    "pm2:start": "cross-env pm2 start dist/src/main.js --name knk -i 0 "
  },
  "dependencies": {
    "@azure/storage-blob": "^12.16.0",
    "@nestjs/common": "^10.1.3",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.1.3",
    "@nestjs/jwt": "^10.1.0",
    "@nestjs/passport": "^10.0.0",
    "@nestjs/platform-express": "^10.1.3",
    "@nestjs/swagger": "^7.1.6",
    "@nestjs/throttler": "^4.2.1",
    "@nestjs/typeorm": "^10.0.0",
    "@sendgrid/mail": "^7.7.0",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dotenv-cli": "^7.2.1",
    "firebase-admin": "^11.10.1",
    "google-auth-library": "^9.0.0",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "moment": "^2.29.4",
    "mongodb": "^5.7.0",
    "mongodb-memory-server": "^8.15.1",
    "nest-winston": "^1.9.3",
    "nestjs-cls": "^3.5.0",
    "passport": "^0.6.0",
    "passport-custom": "^1.1.1",
    "passport-jwt": "^4.0.1",
    "randomstring": "^1.3.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "slugify": "^1.6.6",
    "twilio": "^4.15.0",
    "typeorm": "^0.3.17",
    "uuidv4": "^6.2.13",
    "verify-apple-id-token": "^3.0.1",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.0.2",
    "@golevelup/ts-jest": "^0.4.0",
    "@nestjs/cli": "^10.1.11",
    "@nestjs/schematics": "^10.0.1",
    "@nestjs/testing": "^10.1.3",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.4.8",
    "@types/passport-local": "^1.0.35",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "generate-template-files": "^3.2.1",
    "husky": "^8.0.3",
    "jest": "^29.6.2",
    "mongodb-memory-server": "^8.15.1",
    "pm2": "^5.3.0",
    "prettier": "^3.0.3",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "testTimeout": 50000,
    "moduleNameMapper": {
      "@config": [
        "<rootDir>/config"
      ],
      "@modules/(.*)": [
        "<rootDir>/modules/$1"
      ],
      "@types": [
        "<rootDir>/types"
      ],
      "@filter": [
        "<rootDir>/common/filter"
      ],
      "@pipe": [
        "<rootDir>/common/pipe"
      ],
      "@enum": [
        "<rootDir>/types/enum"
      ],
      "@interceptor": [
        "<rootDir>/common/interceptor"
      ],
      "@constant": [
        "<rootDir>/constant"
      ],
      "@middleware": [
        "<rootDir>/common/middleware"
      ],
      "@guard": [
        "<rootDir>/modules/auth/guard"
      ],
      "@shared/(.*)": [
        "<rootDir>/shared/$1"
      ],
      "@log": [
        "<rootDir>/common/log"
      ],
      "@decorators": [
        "<rootDir>/decorators"
      ],
      "@transform": [
        "<rootDir>/common/transform"
      ],
      "@utils": [
        "<rootDir>/utils"
      ],
      "@test": [
        "<rootDir>/../test"
      ]
    }
  }
}
